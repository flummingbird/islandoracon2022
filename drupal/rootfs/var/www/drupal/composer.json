{
  "name": "islandora/islandoracon2022",
  "type": "project",
  "description": "IslandoraCon 2022 - Example Project.",
  "repositories": [
    {
      "type": "composer",
      "url": "https://packages.drupal.org/8"
    },
    {
      "type": "composer",
      "url": "https://asset-packagist.org"
    },
    {
      "type": "package",
      "package": {
        "name": "library/openseadragon",
        "version": "2.4.2",
        "type": "drupal-library",
        "dist": {
          "url": "https://github.com/openseadragon/openseadragon/releases/download/v2.4.2/openseadragon-bin-2.4.2.zip",
          "type": "zip"
        }
      }
    },
    {
      "type": "package",
      "package": {
        "name": "library/pdf.js",
        "version": "2.4.456",
        "type": "drupal-library",
        "dist": {
          "url": "https://github.com/mozilla/pdf.js/releases/download/v2.4.456/pdfjs-2.4.456-dist.zip",
          "type": "zip"
        }
      }
    }
  ],
  "require": {
    "composer/installers": "^1.9",
    "cweagans/composer-patches": "^1.7",
    "drupal/console": "^1.9",
    "drupal/content_sync": "^2.1",
    "drupal/core-composer-scaffold": "^9.4",
    "drupal/core-project-message": "^9.4",
    "drupal/core-recommended": "^9.4",
    "drupal/default_content": "^2.0@alpha",
    "drupal/devel": "^4.1",
    "drupal/facets": "^2.0",
    "drupal/jquery_ui_accordion": "^1.1",
    "drupal/pathauto": "^1.10",
    "drupal/rest_oai_pmh": "^2.0@beta",
    "drupal/search_api_solr": "^4.2",
    "drush/drush": "^11.1",
    "islandora/islandora": "^2.4",
    "islandora/islandora_defaults": "^2.1",
    "islandora/openseadragon": "^2.0",
    "library/openseadragon": "^2.4",
    "library/pdf.js": "*"
  },
  "require-dev": {
    "drupal/twig_xdebug": "^1.2"
  },
  "conflict": {
    "drupal/drupal": "*"
  },
  "minimum-stability": "dev",
  "prefer-stable": true,
  "config": {
    "allow-plugins": {
        "composer/installers": true,
        "drupal/core-composer-scaffold": true,
        "drupal/core-project-message": true,
        "dealerdirect/phpcodesniffer-composer-installer": true
    },
    "preferred-install": {
      "*": "source"
    },
    "sort-packages": true
  },
  "extra": {
    "drupal-scaffold": {
      "locations": {
        "web-root": "web/"
      },
      "file-mapping": {
        "[web-root]/sites/default/default.settings.php": {
          "append": "assets/default.settings.php"
        }
      }
    },
    "installer-paths": {
      "web/core": [
        "type:drupal-core"
      ],
      "web/libraries/{$name}": [
        "type:drupal-library"
      ],
      "web/modules/contrib/{$name}": [
        "type:drupal-module"
      ],
      "web/profiles/{$name}": [
        "type:drupal-profile"
      ],
      "web/themes/contrib/{$name}": [
        "type:drupal-theme"
      ],
      "drush/Commands/contrib/{$name}": [
        "type:drupal-drush"
      ],
      "web/modules/custom/{$name}": [
        "type:drupal-custom-module"
      ],
      "web/themes/custom/{$name}": [
        "type:drupal-custom-theme"
      ]
    },
    "patches": {
      "islandora/islandora": {
        "JWT": "assets/http.islandora.patch"
      },
      "drupal/content_sync": {
        "UserPerms": "assets/content_sync.fcrepo.patch"
      },
      "drupal/core": {
        "FedoraStyles": "assets/fcrepo.image.styles.patch"
      },
      "islandora/controlled_access_terms": {
        "Normalize": "assets/controlled_access_terms.normalizer.patch"
      }
    },
    "drupal-core-project-message": {
      "include-keys": [
        "homepage",
        "support"
      ],
      "post-create-project-cmd-message": [
        "<bg=blue;fg=white>                                                         </>",
        "<bg=blue;fg=white>  Congratulations, youâ€™ve installed the Drupal codebase  </>",
        "<bg=blue;fg=white>  from the drupal/recommended-project template!          </>",
        "<bg=blue;fg=white>                                                         </>",
        "",
        "<bg=yellow;fg=black>Next steps</>:",
        "  * Install the site: https://www.drupal.org/docs/8/install",
        "  * Read the user guide: https://www.drupal.org/docs/user_guide/en/index.html",
        "  * Get support: https://www.drupal.org/support",
        "  * Get involved with the Drupal community:",
        "      https://www.drupal.org/getting-involved",
        "  * Remove the plugin that prints this message:",
        "      composer remove drupal/core-project-message"
      ]
    }
  }
}
